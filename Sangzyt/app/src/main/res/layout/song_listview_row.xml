<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/song_listview_row_album_art_imageview"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <RelativeLayout
        android:layout_toRightOf="@id/song_listview_row_album_art_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/song_listview_row_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:text="Cinema chupistha"/>

        <TextView
            android:id="@+id/song_listview_row_artist_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/primary_text"
            android:text="Race Gurram"
            android:layout_below="@id/song_listview_row_title_textview"/>

    </RelativeLayout>

</RelativeLayout>